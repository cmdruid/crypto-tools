{
  "name": "@cmdcode/crypto-utils",
  "description": "Simple library for using secp256k1 cryptography.",
  "author": "Christopher Scott",
  "license": "CC-BY-1.0",
  "keywords": [
    "crypto",
    "utils",
    "library"
  ],
  "version": "1.9.8",
  "type": "module",
  "main": "./dist/main.cjs",
  "unpkg": "./dist/bundle.min.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    "import": "./dist/module.mjs",
    "require": "./dist/main.cjs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cmdruid/crypto-utils.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin typescript",
    "clean": "rm -rf dist/* coverage .nyc_output",
    "scratch": "node --loader ts-node/esm --no-warnings test/scratch.ts",
    "lint": "eslint . --ext .ts",
    "fix": "eslint --fix . --ext .ts",
    "tape": "node --loader ts-node/esm --no-warnings test/index.test.js",
    "test": "nyc --reporter=lcov --require ts-node/register yarn tape | tap-spec; nyc report ---reporter=text",
    "types": "tsc",
    "release": "yarn clean && yarn test && yarn types && yarn lint && yarn build"
  },
  "devDependencies": {
    "@cmdcode/buff-utils": "^1.7.4",
    "@noble/curves": "^0.9.1",
    "@noble/hashes": "^1.3.0",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/node": "^18.13.0",
    "@types/tape": "^4.13.2",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.52.0",
    "eslint": "^8.31.0",
    "eslint-config-standard-with-typescript": "^26.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "nyc": "^15.1.0",
    "rollup": "^3.2.3",
    "tap-spec": "^5.0.0",
    "tape": "^5.6.1",
    "tiny-secp256k1": "^2.2.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
